!! urxvt
URxvt.font: xft:Hack-14,xft:DejaVu Sans Mono,xft:Noto Sans Mono CJK SC,xft:monospace
URxvt.letterSpace: -1
URxvt.skipBuiltinGlyphs: true
URxvt.saveLines: 1024
URxvt.loginShell: true
URxvt.scrollBar: true
URxvt.scrollBar_right: true
URxvt.scrollBar_floating: false
URxvt.scrollstyle: rxvt
URxvt.secondaryScroll: false
URxvt.scrollTtyOutput: false
URxvt.scrollTtyKeypress: true
URxvt.scrollWithBuffer: true
URxvt.perl-ext-common: default,confirm-paste,font-size,keyboard-select,url-select,clipboard
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.clipboard.autocopy: true
URvxt.url-select.button: C1
URxvt.url-select.launcher: xdg-open
URxvt.url-select.underline: true
URxvt.url-launcher: xdg-open
URxvt.matcher.button: C1
URxvt.matcher.pattern.1: \\b(mailto|http|https|ftp|file):[/]*[\\w-]\\.[\\w./?&@#-]*[\\w/-]
URxvt.matcher.pattern.2: \\bwww\\.[\\w-]\\.[\\w./?&@#-]*[\\w/-]
URxvt.print-pipe: cat >/dev/null

